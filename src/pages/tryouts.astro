---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import logoTextOutline from "../assets/logo-text-outline.svg";
---

<Layout
  title="Tryouts | Firecrackers Central Ohio"
  description="Join Firecrackers Ohio! View tryout schedules, dates, and locations for all age groups from 10U through 14U at Lou Berliner Sports Park."
>
  <div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-12 text-center">
      <Image
        src={logoTextOutline}
        alt="FIRECRACKERS"
        class="mx-auto h-32 brightness-50 filter dark:brightness-80 dark:invert"
      />
      <h1
        class="font-almarai mb-8 text-5xl font-bold text-gray-900 md:text-6xl dark:text-gray-400"
      >
        TRYOUTS
      </h1>
      <p
        class="mx-auto max-w-2xl text-lg text-gray-700 md:text-xl dark:text-gray-300"
      >
        Our 2025 fall rosters are now set! Follow our social media pages to
        learn about future tryout opportunities. Interested players can also
        reach out to the coach of their age group to inquire about private
        tryouts.
      </p>
    </div>

    <!-- Age Groups Grid -->
    <div class="mx-auto max-w-4xl">
      <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
        {
          [
            {
              age: "10U",
              coach: "BROWN",
              birthYears: "SEPT 2014 - DEC 2015",
              coachName: "Coach Gary",
              phone: "(614) 989-6569",
            },
            {
              age: "11U",
              coach: "NIEMAN",
              birthYears: "SEPT 2013 - DEC 2014",
              coachName: "Coach Matt",
              phone: "(724) 252-6396",
            },
            {
              age: "12U",
              coach: "ALLEN",
              birthYears: "SEPT 2012 - DEC 2013",
              coachName: "Coach Casey",
              phone: "(614) 917-8858",
            },
            {
              age: "13U",
              coach: "JONES",
              birthYears: "SEPT 2011 - DEC 2012",
              coachName: "Coach Phil",
              phone: "(614) 440-8009",
            },
            {
              age: "14U",
              coach: "EVANS",
              birthYears: "SEPT 2010 - DEC 2011",
              coachName: "Coach Andy",
              phone: "(614) 206-9110",
            },
          ].map(team => (
            <div class="rounded-lg bg-gray-50 p-8 shadow-lg dark:bg-gray-800">
              <div class="mb-6 border-b-2 border-gray-300 pb-4 dark:border-gray-600">
                <h3 class="text-red text-3xl font-bold">
                  {team.age} - {team.coach}
                  <a
                    href={`/teams/${team.coach.toLowerCase()}`}
                    class="ml-2 text-sm text-gray-600 transition-all hover:text-red-400 hover:underline dark:text-gray-400"
                  >
                    (team page)
                  </a>
                </h3>
                <p class="text-lg text-gray-700 dark:text-gray-300">
                  {team.birthYears}
                </p>
              </div>

              <div class="space-y-4">
                <p class="text-lg font-medium text-gray-900 dark:text-white">
                  Contact: {team.coachName} - {team.phone}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</Layout>
