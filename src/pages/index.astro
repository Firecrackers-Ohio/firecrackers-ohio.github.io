---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<main class="min-h-screen">
		<div class="container mx-auto px-4 py-8">
			<!-- Header -->
			<div class="mb-12 text-center">
				<img
					src="/logo-text-outline.svg"
					alt="FIRECRACKERS"
					class="h-24 mx-auto filter brightness-50 dark:brightness-80 dark:invert"
				/>
				<h2 class="text-4xl font-bold text-gray-900 dark:text-gray-400 font-almarai">TRYOUTS</h2>
				<p class="text-lg text-gray-700 dark:text-gray-300 mt-2">See below for age group details.</p>
				<a
					href="https://docs.google.com/forms/d/e/1FAIpQLSd3Xiv5M5WycU9bQDIubCt_eAFehdVMxJ-IRgg3rR7nxvEIgw/viewform"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-block mt-4 px-6 py-3 bg-red text-white font-bold rounded-lg transition-colors"
				>
					Click here to register
				</a>
			</div>

			<!-- Age Groups Grid -->
			<div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
				{[
					{
						age: "10U",
						coach: "BROWN",
						birthYears: "SEPT 2014 - DEC 2015",
						dates: "JULY 15 & 20",
						time: "6-8p",
						coachName: "Coach Gary",
						phone: "614-989-6569"
					},
					{
						age: "11U",
						coach: "NIEMAN",
						birthYears: "SEPT 2013 - DEC 2014",
						dates: "JULY 16 & 20",
						time: "6-8p",
						coachName: "Coach Matt",
						phone: "724-252-6396"
					},
					{
						age: "12U",
						coach: "ALLEN",
						birthYears: "SEPT 2012 - DEC 2013",
						dates: "JULY 9 & 16",
						time: "6-8p",
						coachName: "Coach Casey",
						phone: "614-917-8858"
					},
					{
						age: "13U",
						coach: "JONES",
						birthYears: "SEPT 2011 - DEC 2012",
						dates: "JULY 15 & 20",
						time: "6-8p",
						coachName: "Coach Phil",
						phone: "614-440-8009"
					},
					{
						age: "14U",
						coach: "EVANS",
						birthYears: "SEPT 2010 - DEC 2011",
						dates: "JULY 15 & 20",
						time: "6-8p",
						coachName: "Coach Andy",
						phone: "614-206-9110"
					}
				].map((team) => (
					<div class="rounded-lg bg-red-600 p-6 space-y-4">
						<!-- Team Info -->
						<div class="border-b-2 border-gray-800/30 dark:border-gray-300/30 pb-3">
							<h3 class="text-3xl font-bold text-red">{team.age} - {team.coach}</h3>
							<p class="text-lg">{team.birthYears}</p>
						</div>

						<!-- Tryout Details -->
						<div class="space-y-2">
							<div class="flex items-baseline justify-between">
								<h4 class="text-xl font-bold">TRYOUTS</h4>
								<div class="text-lg">
									<span class="font-bold">{team.dates}</span> | {team.time}
								</div>
							</div>
							<p class="text-lg">LOU BERLINER SPORTS PARK</p>
							<p class="text-lg">
								{team.coachName} - {team.phone}
							</p>
						</div>
					</div>
				))}
			</div>
		</div>
	</main>
</Layout>
