---
import "../styles/global.css";
import Nav from "../components/Nav.astro";

const { pathname } = Astro.url;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Almarai:wght@300;400;700;800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <title>Firecrackers Central Ohio Fast Pitch</title>
  </head>
  <body
    class="font-poppins bg-gray-100 dark:bg-gray-900 text-black dark:text-gray-200 font-display min-h-screen"
  >
    <Nav />
    <slot />
    <footer
      class="bg-gray-400 dark:bg-gray-800 text-gray-900 dark:text-gray-200 border-t-2 border-red py-8"
    >
      <div class="flex justify-center">
        <img src="/ohio-logo.svg" alt="Firecrackers Ohio Logo" class="h-16" />
      </div>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
