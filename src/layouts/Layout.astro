---
import "@fontsource/poppins/300.css";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "@fontsource/poppins/700.css";
import "@fontsource/poppins/800.css";
import "@fontsource/almarai/300.css";
import "@fontsource/almarai/400.css";
import "@fontsource/almarai/700.css";
import "@fontsource/almarai/800.css";
import "@fontsource/orbitron/400.css";
import "@fontsource/orbitron/700.css";
import "@fontsource/orbitron/800.css";
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import { Image } from "astro:assets";
import ohioLogo from "../assets/ohio-logo.svg";

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = "Firecrackers Central Ohio Fast Pitch",
  description = "Firecrackers Ohio - Competitive fastpitch softball teams in Central Ohio. Join our teams for exceptional training and character development.",
  image = "/ohio-logo.svg",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{title}</title>
  </head>
  <body
    class="font-poppins min-h-screen bg-gray-100 text-black dark:bg-gray-900 dark:text-gray-200"
  >
    <!-- Skip to main content for accessibility -->
    <a
      href="#main-content"
      class="sr-only z-50 bg-blue-600 p-2 text-white focus:not-sr-only focus:absolute focus:top-0 focus:left-0"
    >
      Skip to main content
    </a>

    <Nav />

    <main id="main-content">
      <slot />
    </main>

    <footer
      class="border-red border-t-2 bg-gray-400 py-8 text-gray-900 dark:bg-gray-800 dark:text-gray-200"
    >
      <div class="flex justify-center">
        <Image src={ohioLogo} alt="Firecrackers Ohio Logo" class="h-16" />
      </div>
    </footer>
  </body>
</html>
